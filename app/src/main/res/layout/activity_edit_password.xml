<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_radius_12_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="新密码"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="确认新密码"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请确认新密码"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <include layout="@layout/line_horizontal_gray_1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <TextView
                    android:id="@+id/tvVerificationCode"
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机验证码"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_toRightOf="@id/tvVerificationCode"
                    android:background="@null"
                    android:hint="请确认新密码"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvSendVerificationCode"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/selector_bg_radius_16_green"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>


        </LinearLayout>

        <TextView
            style="@style/TextViewButtonBlueBgMatchParentStyleBase"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="确认修改"
            android:textSize="@dimen/sp_16" />


    </RelativeLayout>
</LinearLayout>