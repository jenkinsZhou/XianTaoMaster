<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />
    <!--退单详情-->
    <LinearLayout
        android:id="@+id/llRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_17">

                    <LinearLayout
                        android:id="@+id/llAddressInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tvNickName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="-"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tvMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="收货地址：安徽省合肥市高新区 黄山路与天智路交口鸿泰中安创新空间201室"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_stripe" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvGoodsTypeCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_17"
                            android:paddingRight="@dimen/dp_17"
                            android:text="共两件商品"
                            android:layout_weight="1"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReturnStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="@dimen/dp_17"
                            android:paddingRight="@dimen/dp_17"
                            android:text="退货状态"
                            android:layout_weight="1"
                            android:textColor="@color/greenCommon"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <include layout="@layout/line_horizontal_gray_1half_dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/goodsOrderRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

                <!--退货模块-->
                <LinearLayout
                    android:id="@+id/llReturnGood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_17"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="visible">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_30"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="退款金额:"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReturnPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥ 0 "
                            android:textColor="#F95B47"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/llUseCoin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_30"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="退款金币："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReturnCoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- ¥ 0"
                            android:textColor="#F95B47"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_30"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="退货类型"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReturnType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_30"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="退货原因"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReturnReason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拍错／多拍／不想要"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="详细原因："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReturnDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="left"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="备注："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvRemark"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="无备注"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/tvReturnImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="附加照片"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_13" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/rvReturnGoods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>

                <!--配送相关-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_17"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="配送日期"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24小时内发货"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="发票信息"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="不需要发票"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <!--  <LinearLayout
                          android:id="@+id/llRemark"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="@dimen/dp_30"
                              android:gravity="center_vertical"
                              android:text="备注："
                              android:textColor="#ff333333"
                              android:textSize="@dimen/sp_13" />

                          <TextView
                              android:id="@+id/tvRemark"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="无备注信息"
                              android:textColor="#ff999999"
                              android:textSize="@dimen/sp_13" />

                      </LinearLayout>-->

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_17"
                    android:paddingBottom="@dimen/dp_15">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_17"
                    android:paddingBottom="@dimen/dp_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="订单编号："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvOrderNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="创建时间："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvCreateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000-00-00 00:00"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <!--退单处理结果-->
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="订单处理："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReturnResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                        <!--实际退回金额-->
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/llRealReturnMoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="实际退回金额："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvRealReturnMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥ 0"
                            android:textColor="#F95B47"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <!--实际退回金币-->
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/llRealReturnCoin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="实际退回金币："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvRealReturnCoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#F95B47"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="商家回复："
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tvReply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="无备注"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:minHeight="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="拼团订单"
                android:textColor="@color/redTextCommon"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/llBottomToolBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:visibility="visible"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tvReturn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="申请退单"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tvLookExpress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="查看物流"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13" />


                <TextView
                    android:id="@+id/tvLookComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="查看评价"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCancelReturn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="取消退单"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCancelOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tvPayNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="立即支付"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tvConfirmReceive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="确认收货"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCommentNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_radius_15_gray_hollow"
                    android:gravity="center"
                    android:text="立即评价"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>



