<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:id="@+id/rlTitleBar"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="@dimen/dp_40"
        >

        <ImageView
            android:id="@+id/ivReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/ic_return" />

      <!--  <TextView
            android:id="@+id/tvMessageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivMsg"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_circle_red_small"
            android:gravity="center"
            android:textColor="@color/whiteCommon"
            android:textSize="@dimen/sp_6"
            android:visibility="gone" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="系统设置"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:visibility="gone"
            android:src="@mipmap/ic_set_up" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_radius_12_white"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:id="@+id/stvResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:textStyle="bold"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/blackCommon"
                app:sLeftTextSize="@dimen/sp_15"
                app:sLeftTextString="修改登录密码"
                app:sRightIconRes="@mipmap/ic_arrow_right"
                app:sRightTextColor="@color/grayLittleCommon"
                app:sRightTextString="去修改"
                app:sUseRipple="false" />

            <com.allen.library.SuperTextView
                android:id="@+id/stvAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_12"
                android:textStyle="bold"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/blackCommon"
                app:sLeftTextSize="@dimen/sp_15"
                app:sLeftTextString="关于我们"
                app:sRightIconRes="@mipmap/ic_arrow_right"
                app:sRightTextColor="@color/grayLittleCommon"
                app:sRightTextString="@string/app_name"
                app:sUseRipple="false" />

            <com.allen.library.SuperTextView
                android:id="@+id/stvClearCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:textStyle="bold"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/blackCommon"
                app:sLeftTextSize="@dimen/sp_15"
                app:sLeftTextString="清除缓存"
                app:sRightIconRes="@mipmap/ic_arrow_right"
                app:sRightTextColor="@color/grayLittleCommon"
                app:sRightTextString=""
                app:sUseRipple="false" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:textStyle="bold"
                app:sDividerLineType="none"
                app:sLeftTextColor="@color/blackCommon"
                app:sLeftTextSize="@dimen/sp_15"
                app:sLeftTextString="当前版本"
                android:visibility="gone"
                app:sRightIconRes="@mipmap/ic_arrow_right"
                app:sRightTextColor="@color/grayLittleCommon"
                app:sRightTextString="已经是最新版本"
                app:sUseRipple="false" />
        </LinearLayout>


        <TextView
            android:id="@+id/btnExitLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_36"
            android:background="@drawable/selector_bg_radius_20_green_hollow"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="退出登录"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:id="@+id/btnGoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_36"
            android:background="@drawable/selector_bg_radius_20_green"
            android:gravity="center"
            android:visibility="gone"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="去登录"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>
</LinearLayout>