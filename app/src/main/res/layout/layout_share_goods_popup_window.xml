<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="邀请拼团"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnShareWX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/img_wechat_share"
            android:text="分享给微信好友"
            android:textColor="#ff7c838d"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/btnShareWXFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/img_circle_friend"
            android:text="分享到微信朋友圈"
            android:textColor="#ff7c838d"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>


    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@drawable/bg_radius_18_white"
        android:gravity="center"
        android:text="取消分享"
        android:textColor="#7C838D"
        android:textSize="@dimen/sp_13" />

</LinearLayout>