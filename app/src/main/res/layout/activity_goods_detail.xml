<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:id="@+id/rlContentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--底部购买栏-->
        <LinearLayout
            android:id="@+id/llBottomToolBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llCollect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivCollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_collect_selected" />

                <TextView
                    android:id="@+id/tvCollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="收藏" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddShoppingCar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#FF9E02"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/whiteCommon" />

            <TextView
                android:id="@+id/tvPin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/greenCommon"
                android:gravity="center"
                android:text="发起拼团"
                android:textColor="@color/whiteCommon" />

            <TextView
                android:id="@+id/tvBuyNow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF452E"
                android:gravity="center"
                android:text="单独购买"
                android:textColor="@color/whiteCommon" />
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/llBottomToolBar"
            android:layout_alignParentTop="true"
            android:minHeight="@dimen/dp_600">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <cn.bingoogolapple.bgabanner.BGABanner
                    android:id="@+id/bgaBanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_240">

                </cn.bingoogolapple.bgabanner.BGABanner>
                <!--中间部分-->
                <!--商品名称-->
                <TextView
                    android:id="@+id/tvGoodsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="商品名称商品名称商品名称商品名称商品名称"
                    android:textColor="#404040"
                    android:textSize="@dimen/sp_15" />
                <!--产地相关信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@color/whiteCommon"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_bg_radius_16_green_hollow"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_9"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingRight="9dp"
                        android:paddingBottom="@dimen/dp_4"
                        android:text="拼团价半价"
                        android:textColor="@color/greenCommon"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="特点标签" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="特点标签" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="特点标签" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="产地:"
                        android:textColor="#9B9B9B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="四川"
                        android:textColor="#333333" />
                </LinearLayout>

                <include layout="@layout/line_horizontal_gray_1half_dp" />


                <!--备注(不支持7天无理由退货...)-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteCommon"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"

                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dot_green_6dp" />

                    <TextView
                        android:id="@+id/tvRemarkFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24小时内发货"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/dot_green_6dp" />

                    <TextView
                        android:id="@+id/tvRemarkSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不支持七天无理由退货"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <!--拼团相关 17人正在拼团-->
                <LinearLayout
                    android:id="@+id/llAssemble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteCommon"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"

                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_weight="1"
                            android:text="17人正在拼团 可直接参与"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/ic_arrow_right"
                            android:drawablePadding="@dimen/dp_5"
                            android:gravity="right"
                            android:text="查看全部"
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <include layout="@layout/line_horizontal_gray_1half_dp" />

                    <!-- 拼团列表1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_14">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:src="@mipmap/ic_orange" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:text="醉若清风"
                            android:textSize="@dimen/sp_11" />

                        <!--<TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/app_name"
                            android:textSize="@dimen/sp_11" />-->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="还差"
                                android:textSize="@dimen/sp_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="1kg"
                                android:textColor="@color/redTextCommon"
                                android:textSize="@dimen/sp_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="成团"
                                android:textSize="@dimen/sp_11" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="剩余00:01:02"
                            android:textColor="@color/redTextCommon"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            style="@style/TextViewAssembleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="参与拼团" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_5"
                        android:background="@color/whiteCommon" />
                    <!--拼团列表2-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/whiteCommon"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_15">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civAssemble"
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:src="@mipmap/ic_orange" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:text="醉若清风"
                            android:textSize="@dimen/sp_11" />

                        <!--<TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/app_name"
                            android:textSize="@dimen/sp_11" />-->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="还差"
                                android:textSize="@dimen/sp_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="1kg"
                                android:textColor="@color/redTextCommon"
                                android:textSize="@dimen/sp_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="成团"
                                android:textSize="@dimen/sp_11" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="剩余00:01:02"
                            android:textColor="@color/redTextCommon"
                            android:textSize="@dimen/sp_11" />

                        <TextView
                            style="@style/TextViewAssembleStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="参与拼团" />
                    </LinearLayout>
                </LinearLayout>


                <!--评价-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/whiteCommon"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:id="@+id/tvComment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_weight="1"
                        android:text="评价(172)"
                        android:textColor="#333333" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="89%"
                        android:textColor="@color/redTextCommon"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_5"
                        android:drawableRight="@mipmap/ic_arrow_right"
                        android:drawablePadding="@dimen/dp_5"
                        android:gravity="right"
                        android:text="好评"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <include layout="@layout/line_horizontal_gray_1half_dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteCommon"
                    android:orientation="vertical">
                    <!--评论列表-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15">

                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        style="@style/TextViewAssembleStyle"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="查看全部评论" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteCommon"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="商品详情"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>


</LinearLayout>