<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_radius_5_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_5"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_18">
    <!--收货地址-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="高速翡翠湖畔"
            android:gravity="left"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/blackCommon"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tvConsignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/tvPhoneNumber"
            android:gravity="left"
            android:text="收货人蕙雅"
            android:textColor="@color/blackCommon"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tvShippingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvConsignee"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_2"
            android:lineSpacingMultiplier="1.2"
            android:text="畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔翠湖畔"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>


</LinearLayout>