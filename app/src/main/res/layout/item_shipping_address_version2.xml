<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/bg_radius_5_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_18">
    <!--收货地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvConsigneeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/tvPhoneNumber"
            android:gravity="left"
            android:text="收货人蕙雅"
            android:textColor="@color/blackCommon"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tvConsigneePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="left"
            android:text="18256070563"
            android:textColor="@color/blackCommon"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvShippingAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvConsignee"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_2"
        android:lineSpacingMultiplier="1.2"
        android:text="畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔畔翠湖畔"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cBoxAgree"
            style="@style/CustomCheckBoxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true"
            android:drawablePadding="@dimen/dp_10"
            android:padding="@dimen/dp_7"
            android:text="设为默认"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_7"
            app:srcCompat="@mipmap/ic_edit_gray" />


        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_7"
            app:srcCompat="@mipmap/ic_delate_gray" />
    </LinearLayout>
</LinearLayout>